<div class="navbar-yourjob">
  <div class="logo">
    <%= image_tag "logo_yourjob_copy.png", alt: "pic description"%>
    <div class="logo-text">
      <h1>Your Job</h1>
    </div>
  </div>
  <div class="avatar">
    <%= cl_image_tag current_user.profile_pic.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
  </div>
</div>

<div class="flex-container">
  <div class="profile-card">
        <%# haut de la carte %>
        <div class="profile-card-top">
            <%# Name %>
            <div class="full-name" style="color:#3a8fb1;">
              <h1><%= @offer.title %></h1>
            </div>


            <%# citation %>
            <div class="quote"  style="background-color:#3a8fb1; border-radius: 10px; color:white;">
              <h2><%= @offer.description %></h2>
            </div>
        </div>
    </div>
    <div class="testbutton">
      <a class="link"><%= link_to "Apply", offer_path(@offer),  data: { turbolinks: false }, class:"btn-ghost" %></a>
    </div>
    </div>
    <div id="map"
      style="width: 100%; height: 100vh;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>


