<div class="navbar-yourjob">
  <div class="logo">
    <%= link_to image_tag("logo_yourjob_copy.png", alt: "pic description"), root_path %>
    <div class="logo-text">
      <h1>Your Job</h1>
    </div>
  </div>
  <div class="avatar">
    <%= link_to cl_image_tag(current_user.profile_pic.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false), profile_path %>
  </div>
</div>

<div class="flex-container"  style="margin-left: 100px; margin-top: 10px;">
  <div class="profile-card"  style=" text-align: justify; width:900px;">
    <div>
      <div >
        <h1 style="color:#3a8fb1; display: flex;"><%= @offer.title %></h1>
      </div>
      <div style="background-color:#3a8fb1; border-radius: 10px; color:white;">
        <h2 style=" padding: 10px; color:white; font-size: 20px; font-weight: lighter; line-height: 50px;"><%= @offer.description %></h2>
      </div>
    </div>
  </div>
  <div class="testbutton"  style=" margin-top: 100px;">
    <a class="link"><%= link_to "Apply", offer_path(@offer),  data: { turbolinks: false }, class:"btn-ghost" %></a>
  </div>
  </div>
    <div id="map"
      style="width: 100%; height: 40vh; display:flex; margin-top: 400px; margin-left: 0px; margin-bottom: 50px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>


