<div>
  <%= image_tag "logo_yourjob_copy.png", alt: "pic description"%>
  <h3>Your Job</h3>
</div>
<div>
  <img src="" name="avatar">
</div>

<div>
<p><%#= @profile.domain %>Googleman</p>
<p><%#= @profile.address %>Nantes</p>
<p><%#= @profile.contract %>Long-term</p>
</div>

<div>
  <% @offers.each do |offer| %>
  <div>
    <%= cl_image_tag offer.recruiter.logo.key %>
    <%= offer.title %>
    <%= offer.recruiter.company %>
    <%= offer.location %>
    <%= offer.contract %>
    <%#= stats de compatibilitÃ© %>
    <button><%= link_to "See the offer", offer_path(offer) %></button>
  </div>
  <% end %>
</div>

<div id="map"
       style="width: 100%; height: 100vh; background-color: yellow;"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
