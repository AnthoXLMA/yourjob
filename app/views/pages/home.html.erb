<div class="container">

  <div class="container-home">

    <div class="banner">
      <div class="logo">
        <%= image_tag "logo_yourjob_copy.png", alt: "pic description"%>
        <div class="logo-text">
          <h1>Your Job</h1>
        </div>
      </div>

      <div class="sentences">
        <h2>Test your personality to find your first job</h2>
        <p>Meet the perfect job with your own skills! YourJob is your best profile advisor!</p>
      </div>
      <div class="homebutton">
        <a class="link"><%= link_to "Sign up", profile_path, class:"btn-ghost" %></a>
      </div>
    </div>

    <div class="container-right">
      <div class="log-sign">
        <div>
          <%= image_tag "access_account.svg", alt: "pic description"%>
          <h3><%= link_to "Login", profile_path %></h3>
        </div>

        <div>
          <%= image_tag "sign_up.svg", alt: "pic description"%>
          <h3><%= link_to "Sign up", profile_path %></h3>
        </div>
      </div>
      <div class="office-draw">
        <%= image_tag "fond_img_rogne.png", class: "image"%>
      <%= image_tag "background.png" %>
      </div>
    </div>
